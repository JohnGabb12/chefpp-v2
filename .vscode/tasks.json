{
  // Build with MSVC cl.exe (C++17)
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (MSVC cl.exe)",
      "type": "shell",
      "command": "${workspaceFolder}\\scripts\\build.cmd",
      "args": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build Debug (MSVC cl.exe)",
      "type": "shell",
      "command": "${workspaceFolder}\\scripts\\build.cmd",
      "args": ["Debug"],
      "group": "build",
      "problemMatcher": [
        "$msCompile"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run chefpp.exe",
      "type": "shell",
      "command": "${workspaceFolder}\\chefpp.exe",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}
